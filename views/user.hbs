<section class="main-section" id="user-profile">
  <header class="user-header">
    <section class="user-image">
      <div class="image-wrapper" style="background-image: url({{user.profilePicture}}">
      </div>
    </section>
    <section class="user-summary">
      <h1>{{user.name}} </h1>
      <p>{{user.rating}} by {{user.reviewers}}</p>
      <p>{{user.tagLine}}</p>
      <a class="request-button" href="/request?userId={{user._id}}">
        {{#if allowRequest}}
        Send a Request
        {{else}}
        I like this!
        {{/if}}
      </a>
    </section>
  </header>
  <hr>
  <p>Description: {{user.description}}</p>
  <p>Location: {{user.location}}</p>
  {{#if hasAddress}}
  <p>Address: {{user.address}}</p>
  {{/if}}
  <p>Genres:</p>
  <section class="profile-genres">
    {{#each user.genre}}
    <p>{{this}}</p>
    {{/each}}
  </section>
  {{#if user.otherLocations}}
  <section class="profile-other-locations">
    {{#each user.otherLocations}}
    <p>{{this.city}}: {{this.startDate}} - {{this.endDate}}</p>
    {{/each}}
  </section>
  {{/if}}
</section>
{{> requestPopup}}
<script src="/javascripts/popupHelper.js"></script>